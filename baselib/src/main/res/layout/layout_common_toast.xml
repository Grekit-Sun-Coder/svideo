<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_common_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/normal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_len_60px"
        android:layout_marginTop="@dimen/common_len_60px"
        android:layout_marginEnd="@dimen/common_len_60px"
        android:gravity="center"
        android:text="@string/common_dialog_title"
        android:textColor="#333333"
        android:textSize="@dimen/common_text_size_36px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/common_toast_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_len_60px"
        android:layout_marginTop="@dimen/common_len_30px"
        android:layout_marginEnd="@dimen/common_len_60px"
        android:background="@null"
        android:fadeScrollbars="true"
        android:lineSpacingExtra="@dimen/common_len_10px"
        android:scrollbars="none"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/common_text_size_32px"
        tools:text="蜗蜗生活是一款帮助家庭用户解决居家生活烦恼的一站式服务APP，从用户的角度精挑细选生活服务。用户通过一键发布服务需求，平台精准匹配服务商，让用户收获高效便利的服务体验。同时蜗蜗生活也让想创业的技能达人和传统生活服务商通过蜗蜗平台发布技能和服务，互帮互助实现价值。蜗蜗生活整合了包括家政、美业、修理、家教、休闲等上千种日常生活服务项，以用户需求为主导。蜗蜗生活为用户精挑细选。互帮互助实现价值。" />

    <TextView
        android:id="@+id/common_ok_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:paddingLeft="@dimen/common_len_60px"
        android:paddingTop="@dimen/common_len_40px"
        android:paddingRight="@dimen/common_len_60px"
        android:paddingBottom="@dimen/common_len_40px"
        android:text="@string/common_str_know"
        android:textColor="@color/color_FF6122"
        android:textSize="@dimen/common_text_size_36px"
        android:textStyle="bold" />

</LinearLayout>