<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:endColor="@color/color_transparent"
                android:startColor="@color/color_transparent" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="360"
                    android:endColor="@color/color_FF3838"
                    android:centerColor="@color/color_FFB60D"
                    android:startColor="@color/color_B741DB" />
            </shape>
        </clip>
    </item>

</layer-list>