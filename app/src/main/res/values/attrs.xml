<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="HeartViewGroup">
        <attr name="heart_swipe_image" format="integer" />
        <attr name="heart_shake" format="boolean" />
        <attr name="heart_refresh_rate" format="integer" />
        <attr name="heart_degrees_interval_min" format="integer" />
        <attr name="heart_degrees_interval_max" format="integer" />
    </declare-styleable>

    <!-- 金额样式处理 -->
    <declare-styleable name="RichTextView">
        <attr name="richText_integer_textSize" format="dimension"/>
        <attr name="richText_decimal_textSize" format="dimension"/>
        <attr name="richText_unit_textSize" format="dimension"/>
        <attr name="richText_Color" format="reference|color"/>
        <attr name="richText_text" format="reference|string"/>
    </declare-styleable>
</resources>