<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_14181B"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar" />

    <LinearLayout
        android:id="@+id/withdraw_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingTop="@dimen/common_len_40px"
            android:paddingRight="@dimen/common_len_30px"
            android:text="@string/withdraw_income_title"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/common_text_size_32px" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px">

            <cn.weli.svideo.common.widget.RichTextView
                android:id="@+id/withdraw_income_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/common_len_20px"
                android:paddingBottom="@dimen/common_len_20px"
                app:richText_Color="@color/color_FFC244"
                app:richText_decimal_textSize="@dimen/common_len_52px"
                app:richText_integer_textSize="@dimen/common_len_52px"
                app:richText_unit_textSize="@dimen/common_text_size_32px"
                tools:text="20.31" />

            <TextView
                android:id="@+id/withdraw_progress_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/icon_jinru"
                android:drawableRight="@drawable/icon_jinru"
                android:drawablePadding="@dimen/common_len_10px"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/common_len_30px"
                android:paddingLeft="@dimen/common_len_30px"
                android:paddingTop="@dimen/common_len_20px"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="@dimen/common_len_20px"
                android:text="@string/withdraw_progress_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_32px" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_10_white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_len_116px">

            <View
                android:id="@+id/withdraw_type_center_view"
                android:layout_width="@dimen/common_len_66px"
                android:layout_height="@dimen/common_len_1px"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/withdraw_type_ali_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/withdraw_type_center_view"
                android:layout_toRightOf="@id/withdraw_type_center_view"
                android:drawableBottom="@drawable/shape_withdraw_tag_bg"
                android:drawablePadding="@dimen/common_len_16px"
                android:paddingLeft="@dimen/common_len_35px"
                android:paddingTop="@dimen/common_len_36px"
                android:paddingRight="@dimen/common_len_35px"
                android:paddingBottom="@dimen/common_len_6px"
                android:text="@string/ali_bind_account_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_36px" />

            <TextView
                android:id="@+id/withdraw_type_wx_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/withdraw_type_center_view"
                android:layout_toLeftOf="@id/withdraw_type_center_view"
                android:drawableBottom="@drawable/shape_withdraw_tag_bg"
                android:drawablePadding="@dimen/common_len_16px"
                android:paddingLeft="@dimen/common_len_35px"
                android:paddingTop="@dimen/common_len_36px"
                android:paddingRight="@dimen/common_len_35px"
                android:paddingBottom="@dimen/common_len_6px"
                android:text="@string/wx_bind_account_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_36px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/withdraw_ali_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px">

            <TextView
                android:id="@+id/withdraw_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/money_icon_zhifubao_small"
                android:drawableLeft="@drawable/money_icon_zhifubao_small"
                android:drawablePadding="@dimen/common_len_20px"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/common_len_40px"
                android:paddingBottom="@dimen/common_len_40px"
                android:text="@string/withdraw_empty_info_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_32px" />

            <TextView
                android:id="@+id/withdraw_set_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/icon_jinru"
                android:drawableRight="@drawable/icon_jinru"
                android:drawablePadding="@dimen/common_len_10px"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/common_len_30px"
                android:paddingLeft="@dimen/common_len_30px"
                android:paddingTop="@dimen/common_len_20px"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="@dimen/common_len_20px"
                android:text="@string/withdraw_set_info_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_32px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/withdraw_wx_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px">

            <TextView
                android:id="@+id/withdraw_wx_info_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/money_icon_wechat_small"
                android:drawableLeft="@drawable/money_icon_wechat_small"
                android:drawablePadding="@dimen/common_len_20px"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/common_len_40px"
                android:paddingBottom="@dimen/common_len_40px"
                android:text="@string/withdraw_wx_empty_info_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_32px" />

            <TextView
                android:id="@+id/withdraw_wx_set_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/icon_jinru"
                android:drawableRight="@drawable/icon_jinru"
                android:drawablePadding="@dimen/common_len_10px"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/common_len_30px"
                android:paddingLeft="@dimen/common_len_30px"
                android:paddingTop="@dimen/common_len_20px"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="@dimen/common_len_20px"
                android:text="@string/wx_go_bind_title"
                android:textColor="@color/color_E7E7E7"
                android:textSize="@dimen/common_text_size_32px" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/withdraw_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_len_15px"
                android:paddingTop="@dimen/common_len_5px"
                android:paddingRight="@dimen/common_len_15px"
                android:paddingBottom="@dimen/common_len_5px"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/withdraw_wx_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/common_len_15px"
                android:paddingTop="@dimen/common_len_5px"
                android:paddingRight="@dimen/common_len_15px"
                android:paddingBottom="@dimen/common_len_5px"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/withdraw_action_txt"
            android:layout_width="@dimen/common_len_360px"
            android:layout_height="@dimen/common_len_100px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/common_len_80px"
            android:background="@drawable/shape_login_btn"
            android:gravity="center"
            android:text="@string/withdraw_now_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/common_text_size_36px"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>