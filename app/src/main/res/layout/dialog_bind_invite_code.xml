<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/normal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_common_dialog_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_len_20px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_len_40px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/normal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_len_36px"
            android:layout_marginEnd="@dimen/common_len_36px"
            android:layout_marginBottom="@dimen/common_len_30px"
            android:text="@string/common_dialog_title"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/common_text_size_36px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/normal_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/common_len_36px"
            android:layout_marginEnd="@dimen/common_len_36px"
            android:lineSpacingExtra="@dimen/common_len_10px"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/common_text_size_32px"
            tools:text="描述文字的字数尽量控制在三行之内，并且单行最右侧尽量不是标点符号。" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_len_12px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/normal_button_neg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/common_len_192px"
            android:layout_marginRight="@dimen/common_len_192px"
            android:gravity="center"
            android:padding="@dimen/common_len_20px"
            android:text="@string/common_str_cancel"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/common_text_size_36px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/normal_button_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/common_len_42px"
            android:layout_marginRight="@dimen/common_len_42px"
            android:padding="@dimen/common_len_20px"
            android:text="@string/common_str_ok"
            android:textColor="@color/color_FF6122"
            android:textSize="@dimen/common_text_size_36px"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>