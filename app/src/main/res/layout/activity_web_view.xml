<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_14181B"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/common_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_88px">

        <ImageView
            android:id="@+id/web_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingStart="@dimen/common_len_30px"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingTop="@dimen/common_len_10px"
            android:paddingEnd="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px"
            android:paddingBottom="@dimen/common_len_10px"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/web_close_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/web_back_img"
            android:layout_toRightOf="@id/web_back_img"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingEnd="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px"
            android:src="@drawable/icon_web_close"
            android:visibility="invisible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/web_title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/web_right_img"
            android:layout_toLeftOf="@id/web_right_img"
            android:layout_toEndOf="@id/web_close_img"
            android:layout_toRightOf="@id/web_close_img"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/color_E7E7E7"
            android:textSize="@dimen/common_text_size_36px"
            android:textStyle="bold"
            tools:text="center" />

        <ImageView
            android:id="@+id/web_right_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingStart="@dimen/common_len_30px"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingTop="@dimen/common_len_10px"
            android:paddingEnd="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px"
            android:paddingBottom="@dimen/common_len_10px"
            android:src="@drawable/icon_back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/web_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/web_right_back_img"
            android:layout_toLeftOf="@id/web_right_back_img"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingStart="@dimen/common_len_30px"
            android:paddingLeft="@dimen/common_len_10px"
            android:paddingTop="@dimen/common_len_10px"
            android:paddingEnd="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px"
            android:paddingBottom="@dimen/common_len_10px"
            android:src="@drawable/icon_web_close"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/web_menu_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:paddingStart="@dimen/common_len_6px"
            android:paddingLeft="@dimen/common_len_30px"
            android:paddingEnd="@dimen/common_len_30px"
            android:paddingRight="@dimen/common_len_30px"
            android:singleLine="true"
            android:textColor="@color/color_E7E7E7"
            android:textSize="@dimen/common_text_size_32px"
            android:visibility="gone"
            tools:text="right"
            tools:visibility="visible" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/web_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/common_toolbar_layout" />

</RelativeLayout>