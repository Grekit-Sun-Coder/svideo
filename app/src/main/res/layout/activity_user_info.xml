<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_common_toolbar" />

    <RelativeLayout
        android:id="@+id/user_info_head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_118px"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/common_len_30px"
        android:paddingRight="@dimen/common_len_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/common_len_36px"
            android:text="@string/user_info_head_title"
            android:textColor="@color/color_E7E7E7"
            android:textSize="@dimen/common_text_size_36px" />

        <ImageView
            android:id="@+id/user_info_head_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_jinru" />

        <cn.weli.svideo.baselib.component.widget.roundimageview.RoundedImageView
            android:id="@+id/user_info_head_img"
            android:layout_width="@dimen/common_len_60px"
            android:layout_height="@dimen/common_len_60px"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/common_len_10px"
            android:layout_toStartOf="@id/user_info_head_right_img"
            android:layout_toLeftOf="@id/user_info_head_right_img"
            android:src="@drawable/img_touxiang"
            app:riv_oval="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_nick_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_118px"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/common_len_30px"
        android:paddingRight="@dimen/common_len_30px">

        <TextView
            android:id="@+id/user_info_nick_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/common_len_36px"
            android:text="@string/user_info_nickname_title"
            android:textColor="@color/color_E7E7E7"
            android:textSize="@dimen/common_text_size_36px" />

        <ImageView
            android:id="@+id/user_info_nick_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_jinru" />

        <TextView
            android:id="@+id/user_info_nick_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/user_info_nick_right_img"
            android:layout_toLeftOf="@id/user_info_nick_right_img"
            android:layout_toEndOf="@id/user_info_nick_left_txt"
            android:layout_toRightOf="@id/user_info_nick_left_txt"
            android:gravity="end"
            android:padding="@dimen/common_len_10px"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/common_text_size_32px"
            tools:text="一条咸鱼" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_sex_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_118px"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/common_len_30px"
        android:paddingRight="@dimen/common_len_30px">

        <TextView
            android:id="@+id/user_info_sex_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/common_len_36px"
            android:text="@string/user_info_sex_title"
            android:textColor="@color/color_E7E7E7"
            android:textSize="@dimen/common_text_size_36px" />

        <ImageView
            android:id="@+id/user_info_sex_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_jinru" />

        <TextView
            android:id="@+id/user_info_sex_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/user_info_sex_right_img"
            android:layout_toLeftOf="@id/user_info_sex_right_img"
            android:layout_toEndOf="@id/user_info_sex_left_txt"
            android:layout_toRightOf="@id/user_info_sex_left_txt"
            android:gravity="end"
            android:padding="@dimen/common_len_10px"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/common_text_size_32px"
            tools:text="男" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_info_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_118px"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/common_len_30px"
        android:paddingRight="@dimen/common_len_30px">

        <TextView
            android:id="@+id/user_info_phone_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/common_len_36px"
            android:text="@string/user_info_phone_title"
            android:textColor="@color/color_E7E7E7"
            android:textSize="@dimen/common_text_size_36px" />

        <cn.weli.svideo.common.widget.SeparatorPhoneEditView
            android:id="@+id/user_info_phone_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/user_info_phone_left_txt"
            android:layout_toRightOf="@id/user_info_phone_left_txt"
            android:background="@null"
            android:enabled="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="end"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/common_text_size_32px"
            tools:text="15822585924" />
    </RelativeLayout>
</LinearLayout>