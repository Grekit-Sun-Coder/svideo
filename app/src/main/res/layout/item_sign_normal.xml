<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_len_190px"
    android:layout_marginLeft="@dimen/common_len_10px"
    android:layout_marginRight="@dimen/common_len_10px"
    android:background="@drawable/shape_sign_selected"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sign_day_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_len_16px"
        android:paddingBottom="@dimen/common_len_16px"
        android:text="@string/task_has_sign_title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/common_text_size_26px" />

    <ImageView
        android:id="@+id/sign_status_img"
        android:layout_width="@dimen/common_len_60px"
        android:layout_height="@dimen/common_len_60px"
        android:scaleType="centerInside"
        android:src="@drawable/home_icon_right" />

    <TextView
        android:id="@+id/sign_coin_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_len_10px"
        android:textColor="@color/color_white"
        android:textSize="@dimen/common_text_size_40px"
        android:textStyle="bold"
        tools:text="1000" />

</LinearLayout>