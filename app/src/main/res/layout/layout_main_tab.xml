<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_len_114px"
    android:orientation="horizontal">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_100px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_14181B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/common_len_14px"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tab_video_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/video_tab_img"
                android:layout_width="@dimen/common_len_36px"
                android:layout_height="@dimen/common_len_36px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_len_16px"
                android:src="@drawable/tab_icon_home_normal" />

            <cn.weli.svideo.common.widget.GradientColorTextView
                android:id="@+id/tab_video_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_tab_img"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/common_len_16px"
                android:text="@string/video_title"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/common_text_size_22px" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/common_len_200px"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/tab_mine_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mine_tab_img"
                android:layout_width="@dimen/common_len_36px"
                android:layout_height="@dimen/common_len_36px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/common_len_16px"
                android:src="@drawable/tab_icon_my_normal" />

            <cn.weli.svideo.common.widget.GradientColorTextView
                android:id="@+id/tab_mine_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_tab_img"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/common_len_16px"
                android:text="@string/mine_title"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/common_text_size_22px" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_task_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/common_len_50px"
        android:paddingRight="@dimen/common_len_50px">

        <ImageView
            android:id="@+id/tab_coin_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_len_72px"
            android:src="@drawable/anim_tab_task" />

        <cn.weli.svideo.common.widget.GradientColorTextView
            android:id="@+id/tab_task_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/common_len_6px"
            android:gravity="center_horizontal"
            android:text="@string/main_money_str"
            android:textColor="@color/color_90_white"
            android:textSize="@dimen/common_text_size_22px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tab_open_img"
        android:layout_width="@dimen/common_len_108px"
        android:layout_height="@dimen/common_len_40px"
        android:layout_toEndOf="@id/tab_task_layout"
        android:layout_toRightOf="@id/tab_task_layout"
        android:src="@drawable/home_img_tips_baoxiang"
        android:layout_marginTop="@dimen/common_len_22px"
        android:layout_marginLeft="@dimen/common_mar_pad_len__66px"
        android:visibility="invisible"/>
</RelativeLayout>