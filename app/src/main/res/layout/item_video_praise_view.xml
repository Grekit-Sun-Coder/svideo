<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/common_len_15px"
    app:cardBackgroundColor="@color/color_transparent"
    app:cardCornerRadius="@dimen/common_len_8px"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/video_cover_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/video_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_len_130px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_video_bottom_bg" />

        <TextView
            android:id="@+id/video_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="@dimen/common_len_20px"
            android:textColor="@color/color_white"
            android:textSize="@dimen/common_text_size_28px"
            tools:text="666èµž" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
