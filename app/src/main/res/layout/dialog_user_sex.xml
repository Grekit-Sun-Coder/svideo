<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_20"
    android:orientation="vertical">

    <TextView
        android:id="@+id/user_sex_man_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_120px"
        android:drawableRight="@drawable/my_icon_choose_normal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_len_60px"
        android:paddingRight="@dimen/common_len_60px"
        android:text="@string/user_info_sex_man"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/common_text_size_36px"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_1px"
        android:layout_marginLeft="@dimen/common_len_60px"
        android:layout_marginRight="@dimen/common_len_60px"
        android:background="@color/color_EAEAEA" />

    <TextView
        android:id="@+id/user_sex_woman_txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_120px"
        android:drawableRight="@drawable/my_icon_choose_normal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/common_len_60px"
        android:paddingRight="@dimen/common_len_60px"
        android:text="@string/user_info_sex_woman"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/common_text_size_36px"
        android:textStyle="bold" />
</LinearLayout>