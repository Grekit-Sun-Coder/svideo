<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_heart_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:heart_degrees_interval_max="20"
    app:heart_degrees_interval_min="-20"
    app:heart_swipe_image="@drawable/video_icon_like_shuangji">

    <com.qq.e.ads.nativ.widget.NativeAdContainer
        android:id="@+id/video_gdt_ad_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/video_ad_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/video_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_len_580px"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_video_bottom_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/video_ad_content_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_len_4px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/video_ad_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/common_len_500px"
                    android:layout_marginStart="@dimen/common_len_30px"
                    android:layout_marginLeft="@dimen/common_len_30px"
                    android:layout_marginEnd="@dimen/common_len_30px"
                    android:layout_marginRight="@dimen/common_len_30px"
                    android:gravity="center_vertical"
                    android:includeFontPadding="true"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/common_text_size_36px"
                    tools:text="他曾三次向董卿求婚被拒，如今却变成这样，你怎么看？"/>

                <ImageView
                    android:id="@+id/video_ad_icon_img"
                    android:layout_width="@dimen/common_len_34px"
                    android:layout_height="@dimen/common_len_30px"
                    android:layout_marginRight="@dimen/common_len_8px"
                    android:layout_marginTop="@dimen/common_len_3px"
                    android:src="@drawable/img_jinritoutiao" />

                <ImageView
                    android:id="@+id/video_ad_tag_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/common_len_3px"
                    android:src="@drawable/img_ad" />
            </LinearLayout>

            <TextView
                android:id="@+id/video_title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_len_30px"
                android:layout_marginLeft="@dimen/common_len_30px"
                android:gravity="bottom"
                android:lineSpacingExtra="@dimen/common_len_8px"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/common_len_10px"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_text_size_34px"
                android:textStyle="bold"
                tools:text="他曾三次向董卿求婚被拒，如今却变成这样，你怎么看？" />

            <TextView
                android:id="@+id/video_ad_action_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_len_84px"
                android:gravity="center"
                android:layout_marginTop="@dimen/common_len_30px"
                android:layout_marginBottom="@dimen/common_len_40px"
                android:layout_marginStart="@dimen/common_len_30px"
                android:layout_marginLeft="@dimen/common_len_30px"
                android:layout_marginRight="@dimen/common_len_30px"
                android:layout_marginEnd="@dimen/common_len_30px"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_text_size_34px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/common_len_40px">

            <TextView
                android:id="@+id/video_praise_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_len_40px"
                android:drawableTop="@drawable/home_icon_dianzan_normal"
                android:drawablePadding="@dimen/common_len_10px"
                android:gravity="center"
                android:minWidth="@dimen/common_len_170px"
                android:text="@string/video_like_title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_text_size_26px" />

            <TextView
                android:id="@+id/video_share_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/home_icon_share"
                android:drawablePadding="@dimen/common_len_10px"
                android:gravity="center"
                android:minWidth="@dimen/common_len_144px"
                android:text="@string/share_title"
                android:textColor="@color/color_white"
                android:textSize="@dimen/common_text_size_26px" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/video_ad_click_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>