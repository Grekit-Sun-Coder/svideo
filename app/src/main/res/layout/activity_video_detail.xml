<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/video_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/video_close_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/common_len_30px"
        android:paddingTop="@dimen/common_len_20px"
        android:paddingRight="@dimen/common_len_30px"
        android:paddingBottom="@dimen/common_len_20px"
        android:src="@drawable/icon_close_black" />

</RelativeLayout>